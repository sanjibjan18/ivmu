.movie_display
  .left
    = @movie.name
    %br
    = image_tag('no-logo.png')
  .left.details
    %div.cast
      %span.label Cast
      = @movie.performances_actor
    %div.director
      %span.label Director:
      = @movie.directed_by
    %div.release
      %span.label Release Date:
      = @movie.initial_release_date
    %div#rate
      = render :partial => 'shared/rate'
    %div.review
      %span.label Movie Review:
      %div Critics
      %div
        Users
        = "#{@movie.average_rating_percent} %"
      - if current_user
        %div
          = @movie.fb_friends_liked(current_user).count rescue 0
          friends liked it.

    %h4 Comments
    - @movie.comments.each do |comment|
      = comment.comment
    = render '/comments/form', {:movie => @movie}

- if current_user && current_user.reviwed_movie?(@movie)
  #rate_movie{ :style => 'display:none;'}
    = render :partial => "reviews/form", :locals => { :movie => @movie}
  = content_for :js do
    = javascript_include_tag 'facebox'
    %script{:type => "text/javascript"}
      jQuery(document).ready(function($) { $('a[rel*=facebox]').facebox() })


.pagination.right
  %span.left
    %a{:href => "#"}
      %img{:src => "/images/paginationLeft.jpg"}
  %span
    = page_entries_info @movie_tweets
  %span.right
    %a{:href => "#"}
      %img{:src => "/images/paginationRight.jpg"}
.clear
- @movie_tweets.in_groups_of(2) do |group|
  - group.each do |tweet|
    - unless tweet.blank?
      %div{ :style => "width:320px;margin:10px 0px 10px 20px;", :class => "left"}
        %div.reviewBox.left
          %div.reviewIcon.left
            = image_tag("/images/thumbUp.png")
          %p
            = tweet.content
        .clear
.clear


= will_paginate(@critics_reviews, :params => { :controller => 'critics_reviews', :action => :index, :id => @movie.id } )
- @critics_reviews.in_groups_of(2) do |group|
  - group.each do |critics_review|
    - unless critics_review.blank?
      %div.reviewBox.left
        %div.reviewIcon.left
          = image_tag(critics_review.critic_image)
        %p
          = truncate(critics_review.summary, :length => 120)
        = link_to "Read full review", [@movie, critics_review]
  .clear


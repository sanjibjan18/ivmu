= form_for([:admin, @movie]) do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2
        = pluralize(@movie.errors.count, "error")
        prohibited this page from being saved:
      %ul
        -@movie.errors.full_messages.each do |msg|
          %li= msg

  = f.label :name, "Movie Title"
  = f.text_field :name
  %br
  = f.label :initial_release_date, "Released Date"
  = f.text_field :initial_release_date, :id => 'release_date_lt'
  %br
  = f.label :fbpage_id, "Facebook Page ID"
  = f.text_field :fbpage_id
  %br
  = f.label :directed_by , "Directed By"
  = f.text_field :directed_by
  %br
  = f.label :tagline
  = f.text_field :tagline

  %br
  = f.label :produced_by
  = f.text_field :produced_by
  %br
  = f.label :story_by
  = f.text_field :story_by
  %br
  = f.label :cinematography
  = f.text_field :cinematography

  %br
  = f.label :estimated_budget
  = f.text_field :estimated_budget
  %br
  = f.label :production_companies
  = f.text_field :production_companies
  %br
  = f.label :featured_song
  = f.text_field :featured_song
  %br
  = f.fields_for :meta_detail do |md|
    = md.label :meta_title
    = md.text_field :meta_title
    %br
    = md.label :meta_keywords
    = md.text_area :meta_keywords, :rows => 5
    %br
    = md.label :meta_description
    = md.text_area :meta_description, :rows => 5
  %hr
  .actions
    = f.submit 'Save'
    \- or -
    = link_to 'Cancel', admin_movies_path


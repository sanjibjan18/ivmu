= form_for [:admin, @page] do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :reference
    = f.text_field :reference
  .field
    = f.label :usage
    = f.text_field :usage
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
    \|
    = link_to 'Back', admin_pages_path


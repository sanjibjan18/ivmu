<!DOCTYPE html>
<html>
<head>
  <title>Muvi</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :js %>
</head>
 <body>
<div id='global_links' class='right'>
    <% unless current_user -%>
      <%= link_to image_tag('/images/twitter_64.png',  :alt => "Twitter", :size => "64x64"), "/auth/twitter" ,:class => 'auth_provider' %>
      <%= link_to image_tag('/images/facebook_64.png',  :alt => "Facebook", :size => "64x64"), "/auth/facebook" ,:class => 'auth_provider' %>
      <%= link_to 'Sign-up', new_user_registration_path %>
      <%= link_to 'Login', new_user_session_path %>

    <%else-%>
      <%= link_to 'Comming soon movies', coming_soon_movies_path %>
      <%= link_to 'Edit profile', edit_user_profile_path(current_user) %>
      <% unless current_user.twitter_omniauth.blank? %>
        <%= link_to 'Fetch tweets', fetch_tweets_path %>
      <%end%>
      <% unless current_user.facebook_omniauth.blank? %>
        <%= link_to 'Fetch fb data', fetch_path %>
      <%end%>
      <%= link_to 'Logout', destroy_user_session_path %>
    <%end-%>
  </div>
  <div class='clear'></div>
  <div id ='wrapper'>
    <%= yield %>
  </div>

  </body>
</html>


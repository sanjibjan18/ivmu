<!DOCTYPE html>
<html>
  <head>
    <%= yield :meta_title_and_keywords %>
    <%= stylesheet_link_tag 'style', 'facebox', 'jquery-ui-1.8.4.custom' %>
    <%= javascript_include_tag :defaults, 'facebox', 'jquery-ui-1.8.8.custom.min' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="main">
      <%= render :partial => 'shared/header' %>
      <div id="wrapper">
        <div class="container left">
          <h2> <%= yield :heading %> </h2>
          <%= yield %>
        </div>
        <%= render :partial => '/shared/sidebar'%>
        <div class="clear"></div>
      </div>
    </div>
    <%= render :partial => 'shared/footer'%>
  </body>
</html>


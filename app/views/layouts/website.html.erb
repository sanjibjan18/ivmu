<!DOCTYPE html>
<html>
<head>
  <title>Muvi</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :js %>
</head>
 <body>
<div id='global_links' class='right'>
    <% unless current_user -%>
      <%= link_to image_tag('/images/twitter_64.png',  :alt => "Twitter", :size => "64x64"), "/auth/twitter" ,:class => 'auth_provider' %>
      <%= link_to image_tag('/images/facebook_64.png',  :alt => "Facebook", :size => "64x64"), "/auth/facebook" ,:class => 'auth_provider' %>
      <%= link_to 'Sign-up', new_user_registration_path %>
      <%= link_to 'Login', new_user_session_path %>

    <%else-%>
      <%= link_to 'Comming soon movies', coming_soon_movies_path %>
      <%= link_to 'Edit profile', edit_user_registration_path %>
      <%= link_to 'Fetch fb data', fetch_path %>
      <%= link_to 'Logout', destroy_user_session_path %>
      <div>
            <p> Associated your account  </p>
            <% ['facebook', 'twitter'].each do |account| %>
              <% if current_user.instance_eval("#{account}_omniauth").blank?  %>
                 <%= link_to image_tag("/images/#{account}_64.png",  :alt => "#{account}", :size => "64x64"), "/auth/#{account}" ,:class => 'auth_provider' %>
              <%else%>
                  <%= link_to "Remove associated #{account} account", user_token_path(current_user.instance_eval("#{account}_omniauth")) , :method => :delete, :confirm => "Are you sure?" %>  |
              <%end%>
            <%end%>
      </div>

    <%end-%>
  </div>
  <div class='clear'></div>
  <div id ='wrapper'>
    <%= yield %>
  </div>

  </body>
</html>


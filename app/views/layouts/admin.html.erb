<!DOCTYPE html>
<html>
<head>
  <title>Muvi- Admin</title>
  <%= stylesheet_link_tag 'jquery-ui-1.8.4.custom', 'jHtmlArea', 'scaffold' %>
  <%= javascript_include_tag :defaults,'jquery-ui-1.8.8.custom.min', 'jHtmlArea', 'admin' %>
  <%= csrf_meta_tag %>
</head>
 <body>
   <div id ='wrapper'>
  <div id='header'>
    <div id='global_links' class='right'>
      <% unless current_user -%>
        <%= link_to 'Sign-up', new_user_registration_path %>
        <%= link_to 'Login', new_user_session_path %>
        <%= link_to_oauth2 "Sign In with Facebook" %>
      <%else-%>

        <%= link_to 'Edit profile', edit_user_registration_path %>
        <%= link_to 'Fetch fb data', fetch_path %>
        <%= link_to 'Logout', destroy_user_session_path %>
      <%end-%>
    </div>
    <div class='clear'></div>
    <ul class= 'tabs'>
          <li> <%= link_to 'Manage movies', admin_movies_path, :class => ('active' if request.fullpath =~ /movies/) %> </li>
          <li> <%= link_to 'Manage celebrities', '#' %> </li>
          <li> <%= link_to 'Manage users', admin_users_path, :class => ('active' if request.fullpath == /users/) %> </li>
          <li> <%= link_to 'Manage comments', '#', :class => ('active' if request.fullpath == '/') %> </li>
          <li> <%= link_to "CMS/Static pages", admin_pages_path , :class => ('active' if request.fullpath == /pages/)%> </li>
          <li> <%= link_to "Reports", '#' %> </li>
        </ul>
    <div class='clear'></div>

  </div>


    <%= yield %>
  </div>

  </body>
</html>


      %img{:src => "/images/viewtrailer.jpg"}
    %br
    %a{:href => "#"}
      %img{:src => "/images/followbutton.jpg"}
  .moviDetail.right
    .detail
      %h3 Movie
      .left{:style => "width:42%"}

        .criticsRating
